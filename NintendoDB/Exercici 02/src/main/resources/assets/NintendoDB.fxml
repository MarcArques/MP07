<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.Controller">      <!-- Top section with title -->
   <!-- Top section with title -->
      <top>
         <HBox spacing="10" style="-fx-background-color: lightblue;">
            <Label text="Nintendo DB" style="-fx-font-size: 20px;"/>
         </HBox>
      </top>

      <!-- Left section with list of games -->
      <left>
         <VBox spacing="5" BorderPane.alignment="CENTER">
            <ComboBox fx:id="comboBoxCategory" prefWidth="150"/>
            <ListView fx:id="listViewItems" prefWidth="200" prefHeight="300"/>
         </VBox>
      </left>

      <!-- Center section with image and description -->
      <center>
         <VBox alignment="CENTER" spacing="10">
            <ImageView fx:id="gameImage" fitWidth="200" fitHeight="200"/>
            <Label fx:id="gameTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Text fx:id="gameDescription" wrappingWidth="300"/>
         </VBox>
      </center>
</BorderPane>
   
   
